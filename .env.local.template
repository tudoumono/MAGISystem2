# AWS Region Configuration
# 現在のAWS Consoleで表示されているリージョンに合わせて設定してください
# MAGI Systemはap-northeast-1 (Tokyo)で統一されています

NEXT_PUBLIC_AWS_REGION=ap-northeast-1
AWS_REGION=ap-northeast-1
AWS_DEFAULT_REGION=ap-northeast-1

# Bedrock Region Configuration
BEDROCK_REGION=ap-northeast-1

# AWS Credentials (ローカル開発用 - 本番環境ではIAM Roleを使用)
# AWS_ACCESS_KEY_ID=your_access_key_here
# AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Cognito Configuration (デプロイ後に設定)
NEXT_PUBLIC_USER_POOL_ID=
NEXT_PUBLIC_USER_POOL_CLIENT_ID=

# AppSync Configuration (デプロイ後に設定)
NEXT_PUBLIC_GRAPHQL_ENDPOINT=
NEXT_PUBLIC_API_KEY=

# MAGI Agent Configuration
# Amazon Bedrock AgentCore Runtime (独立デプロイ)
# アーキテクチャ: Amplify Hosting → HTTPS → AgentCore Runtime → Bedrock
#
# AgentCore Runtime エンドポイント URL（デプロイ後に設定）
# 例: https://your-agentcore-runtime.execute-api.ap-northeast-1.amazonaws.com
AGENTCORE_RUNTIME_URL=

# AgentCore Runtime ARN（AWS SDK使用時またはテストスクリプト用）
MAGI_AGENT_ARN=arn:aws:bedrock-agentcore:REGION:ACCOUNT_ID:runtime/AGENT_ID
MAGI_AGENT_ID=your_agent_id

# Observability Configuration
OBSERVABILITY_ENABLED=true
OTEL_ENABLED=true
CLOUDWATCH_ENABLED=true
XRAY_ENABLED=true
OBSERVABILITY_DEBUG=false

# Service Configuration
SERVICE_NAME=magi-decision-ui
SERVICE_VERSION=1.0.0

# Environment
NODE_ENV=development

# Admin/Test Pages Configuration (開発・デバッグ用)
# 本番環境では false に設定してテストページを無効化
# /admin/test へのアクセスを制御
NEXT_PUBLIC_ENABLE_TEST_PAGES=false
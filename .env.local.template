# AWS Region Configuration
# 現在のAWS Consoleで表示されているリージョンに合わせて設定してください
# MAGI Systemはap-northeast-1 (Tokyo)で統一されています

NEXT_PUBLIC_AWS_REGION=ap-northeast-1
AWS_REGION=ap-northeast-1
AWS_DEFAULT_REGION=ap-northeast-1

# Bedrock Region Configuration
BEDROCK_REGION=ap-northeast-1

# AWS Credentials (ローカル開発用 - 本番環境ではIAM Roleを使用)
# AWS_ACCESS_KEY_ID=your_access_key_here
# AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Cognito Configuration (デプロイ後に設定)
NEXT_PUBLIC_USER_POOL_ID=
NEXT_PUBLIC_USER_POOL_CLIENT_ID=

# AppSync Configuration (デプロイ後に設定)
NEXT_PUBLIC_GRAPHQL_ENDPOINT=
NEXT_PUBLIC_API_KEY=

# Amazon Bedrock AgentCore Runtime Configuration
# アーキテクチャ（参考記事準拠）:
#   Amplify Hosting (Next.js Frontend)
#       ↓ fetch('/invocations')
#   AgentCore Runtime (Docker Container)
#       ├─ Next.jsバックエンド (ポート8080)
#       │   ├─ POST /api/invocations
#       │   └─ spawn('python', ['magi_agent.py'])
#       └─ Python magi_agent.py (子プロセス)
#
# AgentCore Runtime URL（必須）
# ローカル開発: http://localhost:8080
# 本番環境: AgentCore RuntimeのデプロイURL
# 例: https://agentcore-runtime.example.com
NEXT_PUBLIC_AGENTCORE_URL=http://localhost:8080

# ⚠️ 非推奨（AWS SDK方式 - PR #5で誤って実装されたもの）
# 参考記事のアーキテクチャでは使用しません
# MAGI_AGENT_ARN=
# MAGI_AGENT_ID=

# Observability Configuration
OBSERVABILITY_ENABLED=true
OTEL_ENABLED=true
CLOUDWATCH_ENABLED=true
XRAY_ENABLED=true
OBSERVABILITY_DEBUG=false

# Service Configuration
SERVICE_NAME=magi-decision-ui
SERVICE_VERSION=1.0.0

# Environment
NODE_ENV=development

# Admin/Test Pages Configuration (開発・デバッグ用)
# 本番環境では false に設定してテストページを無効化
# /admin/test へのアクセスを制御
NEXT_PUBLIC_ENABLE_TEST_PAGES=false
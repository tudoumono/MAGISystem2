# AWS Region Configuration
# 現在のAWS Consoleで表示されているリージョンに合わせて設定してください
# MAGI Systemはap-northeast-1 (Tokyo)で統一されています

NEXT_PUBLIC_AWS_REGION=ap-northeast-1
AWS_REGION=ap-northeast-1
AWS_DEFAULT_REGION=ap-northeast-1

# Bedrock Region Configuration
BEDROCK_REGION=ap-northeast-1

# AWS Credentials (ローカル開発用 - 本番環境ではIAM Roleを使用)
# AWS_ACCESS_KEY_ID=your_access_key_here
# AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Cognito Configuration (デプロイ後に設定)
NEXT_PUBLIC_USER_POOL_ID=
NEXT_PUBLIC_USER_POOL_CLIENT_ID=

# AppSync Configuration (デプロイ後に設定)
NEXT_PUBLIC_GRAPHQL_ENDPOINT=
NEXT_PUBLIC_API_KEY=

# MAGI Agent Configuration
# AgentCore Runtime ARN (agents/.bedrock_agentcore.yamlから取得)
MAGI_AGENT_ARN=arn:aws:bedrock-agentcore:ap-northeast-1:262152767881:runtime/magi_agent-4ORNam2cHb
MAGI_AGENT_ID=magi_agent-4ORNam2cHb

# Lambda Function Configuration (Amplify Gen2がデプロイ後に設定)
# 形式: <backend-id>-bedrockAgentGateway-<hash>
# amplify sandbox または amplify deploy 後に確認
BEDROCK_GATEWAY_LAMBDA_NAME=bedrock-agent-gateway

# Observability Configuration
OBSERVABILITY_ENABLED=true
OTEL_ENABLED=true
CLOUDWATCH_ENABLED=true
XRAY_ENABLED=true
OBSERVABILITY_DEBUG=false

# Service Configuration
SERVICE_NAME=magi-decision-ui
SERVICE_VERSION=1.0.0

# Environment
NODE_ENV=development
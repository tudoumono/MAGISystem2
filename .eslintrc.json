{
  "extends": [
    "next/core-web-vitals"
  ],
  "rules": {
    // React関連のベストプラクティス
    "react-hooks/exhaustive-deps": "warn",
    "react/jsx-key": "error",
    "react/no-unescaped-entities": "off",
    
    // コード品質向上のためのルール
    "prefer-const": "error",
    "no-var": "error",
    "no-console": "warn",
    "no-debugger": "error"
  }
}